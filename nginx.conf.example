# Nginx Configuration for SLGTI SIS
# Copy this configuration to your nginx server configuration
# Usually located at: /etc/nginx/sites-available/your-site

server {
    listen 80;
    listen [::]:80;
    server_name sis.slgti.ac.lk;
    
    # Redirect HTTP to HTTPS (uncomment when SSL certificate is installed)
    # return 301 https://$server_name$request_uri;
    
    # For HTTP (before SSL setup)
    root /var/www/html/SLGTIMIS;  # Update this path to your actual installation path
    index index.php index.html index.htm;
    
    # Logging
    access_log /var/log/nginx/slgti-sis-access.log;
    error_log /var/log/nginx/slgti-sis-error.log;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Main location block
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # PHP processing
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php-fpm.sock;  # Update PHP version as needed
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Security: Prevent execution of PHP files in uploads directory
        fastcgi_param PHP_ADMIN_VALUE "open_basedir=$document_root/:/tmp/";
    }
    
    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Deny access to sensitive files
    location ~ ^/(install\.php|config|\.htaccess|\.git) {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Static files caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Deny access to PHP files in uploads directory (if any)
    location ~* /uploads/.*\.php$ {
        deny all;
    }
}

